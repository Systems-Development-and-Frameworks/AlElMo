{
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "semi": [
            2,
            "always"
        ],
        "consistent-return": "off",
        "class-methods-use-this": "off",
        "linebreak-style": [
            "error",
            "windows"
        ] // changes the file to CRLF
    },
    "plugins": [
        "jest"
    ],
    "env": {
        "jest/globals": true
    }
}